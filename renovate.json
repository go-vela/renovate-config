{
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies"
  ],
  "golang": {
    "packageRules": [
      {
        "matchPackageNames": [
          "github.com/aws/aws-sdk-go"
        ],
        "extends": [
          "schedule:monthly"
        ]
      }
    ],
    "postUpdateOptions": [
      "gomodTidy",
      "gomodUpdateImportPaths"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "deps (patch)"
    }
  ]
}
