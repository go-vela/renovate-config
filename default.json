{
  "extends": [
    "config:base",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "docker-compose": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pinDigest",
        "pin"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch-digest-pin"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/aws/aws-sdk-go",
        "github.com/hashicorp/go-getter",
        "github.com/hashicorp/vault",
        "golang.org/x/oauth2",
        "github.com/urfave/cli/v2"
      ],
      "extends": [
        "schedule:monthly"
      ]
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchRepositories": [
        "go-vela/server",
        "go-vela/types"
      ],
      "matchPackageNames": [
        "github.com/buildkite/yaml"
      ],
      "enabled": false
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ]
}
